@model UserSignUpViewModel 
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">


<h1>MERHABA DÜNYA</h1>

<body>
    <div class="container">
        <form class="m-t" method="post" role="form" asp-action="Index" enctype="multipart/form-data">
            <h2>YAZAR KAYIT EKRANI</h2>
            <div class="form-group">
                <span asp-validation-for="@Model.NameSurname" class="text-danger"></span>
                <input type="text" class="form-control" asp-for="@Model.NameSurname" placeholder="Name Surname" aria-label="Username" aria-describedby="basic-addon1">
            </div>
            <br />

            <div class="form-group">
                <span asp-validation-for="@Model.Mail" class="text-danger"></span>
                <input type="email" asp-for="@Model.Mail" class="form-control" placeholder="Mail" aria-label="Recipient's username" aria-describedby="basic-addon2">

            </div>
            <br />
            <div class="form-group">
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
                <input type="password" asp-for="@Model.Password" class="form-control" placeholder="Şifre" aria-label="Recipient's username" aria-describedby="basic-addon2">

            </div>
            <br />
            <div class="form-group">
                <span asp-validation-for="@Model.ConfirmPassword" class="text-danger"></span>
                <input type="password" asp-for="@Model.ConfirmPassword" class="form-control" placeholder="Şifre Tekrar" aria-label="Recipient's username" aria-describedby="basic-addon2">

            </div>

            <br />
            <div class="form-group">
                <span asp-validation-for="@Model.UserName" class="text-danger"></span>
                <input type="text" asp-for="@Model.UserName" class="form-control" placeholder="Username" aria-label="Recipient's username" aria-describedby="basic-addon2">

            </div>
            <br />
            <div class="form-group">
                <span asp-validation-for="@Model.Cv" class="text-danger"></span>
                <input type="file" asp-for="@Model.Cv" class="form-control" placeholder="Username" aria-label="Recipient's username" aria-describedby="basic-addon2 ">

            </div>
            <br />
            <input type="submit" value="GİRİŞ YAP" />
            <div class="text-danger" asp-validation-summary="
                 ModelOnly"></div>
        </form>

    </div>
</body>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>